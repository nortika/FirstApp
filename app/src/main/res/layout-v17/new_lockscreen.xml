<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:addroid="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#ff383838">

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:textSize="60dip"
        android:textColor="#ffedff3e"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/txtWeek"
        android:text="ã…‹" />

    <TextView android:text="aa" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtWeek"
        android:textSize="30dip"
        android:typeface="normal"
        android:textColor="#ffedff3e"
        android:layout_marginBottom="99dp"
        android:layout_above="@+id/txtTaskList"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtTaskList"
        android:textSize="40dip"
        android:typeface="sans"
        android:textColor="#ffedff3e"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgRight"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/right_3" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgLeft"
        android:src="@drawable/left_3"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgIntoApp"
            android:layout_gravity="bottom"
            android:background="#00000000"
            android:src="@drawable/app4"
            android:layout_alignTop="@+id/imgCenter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgUnlock"
            android:layout_gravity="bottom"
            android:background="#00000000"
            android:src="@drawable/unlock4"
            android:layout_alignBottom="@+id/imgCenter"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgCenter"
            android:src="@drawable/center"
            android:background="#00000000"
            android:layout_marginBottom="41dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</RelativeLayout>
